{
   "compilerOptions": {
     "module": "commonjs",
     "esModuleInterop": true,
     "target": "es6",
     "moduleResolution": "Node",
     "outDir": "./build",
     "rootDir": "./",
     "forceConsistentCasingInFileNames": true,
     "noFallthroughCasesInSwitch": true,
     "isolatedModules": false,
     "strict": true,
     "noImplicitAny": true,
     "useUnknownInCatchVariables": false,
     "inlineSourceMap": true
   },
   "ts-node": {
       "esm": true
   },
   "lib": ["esnext"]
}